<?xml version="1.0" encoding="UTF-8"?>
<rui:ReactiveContentPage 
			 x:TypeArguments="local:UserPreferencesPageViewModel"
			 xmlns="http://xamarin.com/schemas/2014/forms" 
			 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
			 x:Class="Time2Brew.Core.UserPreferencesPage"
			 xmlns:rui="clr-namespace:ReactiveUI.XamForms;assembly=ReactiveUI.XamForms">
	<ContentPage.Content>
		<StackLayout Orientation="Vertical">
			<Label Text="Temperature Units" FontSize="Large" FontAttributes="Bold"/>

			<StackLayout Orientation="Horizontal">
				<Switch x:Name="switchTempPreference" VerticalOptions="Center"></Switch>
				<Label x:Name="lblTempPreference" FontSize="Medium" VerticalOptions="Center"></Label>
			</StackLayout>

			<StackLayout Orientation="Horizontal">
				<Label Text="Volume Units" FontSize="Large" FontAttributes="Bold"/>
				<Picker x:Name="pickerVolumePreference" VerticalOptions="Center" HorizontalOptions="FillAndExpand"></Picker>
			</StackLayout>

			<StackLayout Orientation="Horizontal">
				<Label Text="Equipment Loss" FontSize="Large" FontAttributes="Bold"/>
				<Entry x:Name="entryEquipmentLoss" HorizontalOptions="FillAndExpand" Keyboard="Numeric"/>
			</StackLayout>

			<StackLayout Orientation="Horizontal">
				<Label Text="Trub Loss" FontSize="Large" FontAttributes="Bold"/>
				<Entry x:Name="entryTrubLoss" HorizontalOptions="FillAndExpand" Keyboard="Numeric"/>
			</StackLayout>

		</StackLayout>
	</ContentPage.Content>
</rui:ReactiveContentPage>
